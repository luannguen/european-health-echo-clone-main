{
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.(m)?js$": "$1"
  },
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/src/**/__tests__/**/*.test.ts"
  ],
  "verbose": true,
  "moduleFileExtensions": ["js", "ts", "tsx", "json", "node"]
}