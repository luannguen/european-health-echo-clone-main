modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Full Stack Dev"

[[workflows.workflow]]
name = "Dev Server"
author = 4868510
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Full Stack Dev"
author = 4868510
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node ./backend/src/server.js"

[[workflows.workflow]]
name = "Test API"
author = 4868510
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/src/tests && node full-api-test.js"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081
